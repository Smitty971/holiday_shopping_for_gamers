<h1>Your Shopping List</h1>
<div>
    <h1><%= @game.title %></h1>
    <h1><%= @game.genre %></h1>
    <h1><%= @game.rating %></h1>
</div>
<br>

<form action="/games/<%=@game.id%>" method="post">
    <input type="hidden" name="_method" value="delete">
 <% if @game.user == current_user %>
<button type="submit">Delete List</button>
<% end %>
</form>